<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dip_13"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginBottom="@dimen/dip_5"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/dip_5"
            android:layout_height="@dimen/dip_20"
            android:background="#e0c08f"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_7"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_color_deep"
            android:textSize="@dimen/text_size_normal"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:layout_marginBottom="@dimen/dip_13"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_10"
                android:gravity="bottom"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_weight="1"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dip_20"
                    android:textColor="#e74a55"/>
                <LinearLayout
                    android:layout_weight="1.2"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="期限"
                        android:textColor="@color/text_color_deep"
                        android:textSize="@dimen/dip_15"/>
                    <TextView
                        android:id="@+id/tv_term"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/dip_15"
                        android:textColor="#ff8517"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:text="年利率"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="#bcbcbc"/>
                <TextView
                    android:id="@+id/tv_type"
                    android:layout_weight="1.2"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:text="0元起购  |  未知"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="#bcbcbc"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/dip_65"
            android:layout_height="@dimen/dip_65"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_default_cover"/>
    </LinearLayout>
    <View
        android:id="@+id/v_bought_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_0.5"
        android:background="@color/common_divider_color"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_bought_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dip_15"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_buy_time"
            android:layout_weight="1"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:text="2018-12-13 09:04:30"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_middle"/>
        <TextView
            android:id="@+id/tv_buy_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dip_10"
            android:text="¥80万元"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_middle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dip_10"
            android:paddingBottom="@dimen/dip_10"
            android:paddingLeft="@dimen/dip_15"
            android:paddingRight="@dimen/dip_15"
            android:text="详情 >"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_middle"/>
    </LinearLayout>
</LinearLayout>