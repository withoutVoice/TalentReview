<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_0"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_interest_rate1"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_interest_rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10.5%"
                        android:textColor="#e74a55"
                        android:textSize="@dimen/dip_20" />

                    <TextView
                        android:id="@+id/tv_range1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_7"
                        android:text="5万-15万"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_interest_rate2"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_interest_rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11.6%"
                        android:textColor="#e74a55"
                        android:textSize="@dimen/dip_20" />

                    <TextView
                        android:id="@+id/tv_range2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_7"
                        android:text="15万-50万"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_interest_rate3"
                    android:layout_width="@dimen/dip_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_interest_rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#e74a55"
                        android:textSize="@dimen/dip_20" />

                    <TextView
                        android:id="@+id/tv_range3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dip_7"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.5"
                android:layout_marginTop="@dimen/dip_10"
                android:background="@color/common_divider_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginTop="@dimen/dip_10"
                android:text="年利率"
                android:textColor="#ac9375" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_10"
                android:background="@color/common_bg_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_10"
                android:text="产品介绍"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品类型"
                    android:textColor="@color/text_color_middle"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品规模"
                    android:textColor="@color/text_color_middle"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="底层类型"
                    android:textColor="@color/text_color_middle"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_bottom_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品年限"
                    android:textColor="@color/text_color_middle"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_year_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资金用途"
                    android:textColor="@color/text_color_middle"
                    android:textSize="@dimen/text_size_normal" />

                <TextView
                    android:id="@+id/tv_purpose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:textColor="@color/text_color_deep"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_10"
                android:background="@color/common_bg_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginTop="@dimen/dip_10"
                android:text="产品亮点"
                android:textColor="@color/text_color_deep"
                android:textSize="@dimen/text_size_large" />

            <LinearLayout
                android:id="@+id/ll_bright_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_10"
                android:background="@color/common_bg_gray" />

            <LinearLayout
                android:id="@+id/ll_finance_mechanism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_finance_mechanism"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="融资机构"
                    android:textSize="@dimen/text_size_large" />

                <View
                    android:layout_width="@dimen/dip_9"
                    android:layout_height="@dimen/dip_15"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:background="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                android:id="@+id/v_finance_mechanism"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.5"
                android:layout_marginLeft="@dimen/dip_13"
                android:layout_marginRight="@dimen/dip_13"
                android:background="@color/common_divider_color" />

            <LinearLayout
                android:id="@+id/ll_guarantee_mechanism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_guarantee_mechanism"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="担保机构"
                    android:textSize="@dimen/text_size_large" />

                <View
                    android:layout_width="@dimen/dip_9"
                    android:layout_height="@dimen/dip_15"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:background="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                android:id="@+id/v_guarantee_mechanism"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.5"
                android:layout_marginLeft="@dimen/dip_13"
                android:layout_marginRight="@dimen/dip_13"
                android:background="@color/common_divider_color" />

            <LinearLayout
                android:id="@+id/ll_issue_mechanism"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/dip_10"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_15"
                android:layout_marginTop="@dimen/dip_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_issue_mechanism"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="发行机构"
                    android:textSize="@dimen/text_size_large" />

                <View
                    android:layout_width="@dimen/dip_9"
                    android:layout_height="@dimen/dip_15"
                    android:layout_marginLeft="@dimen/dip_40"
                    android:background="@mipmap/ic_arrow_right" />
            </LinearLayout>

            <View
                android:id="@+id/v_issue_mechanism"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip_0.5"
                android:layout_marginLeft="@dimen/dip_13"
                android:layout_marginRight="@dimen/dip_13"
                android:background="@color/common_divider_color" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_talk"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginBottom="@dimen/dip_15"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_15"
                android:background="@mipmap/ic_talk" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="留言区"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dip_1"
            android:layout_height="match_parent"
            android:background="#685a46" />

        <LinearLayout
            android:id="@+id/ll_collect"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:id="@+id/iv_collect"
                android:layout_width="@dimen/dip_20"
                android:layout_height="@dimen/dip_20"
                android:layout_marginBottom="@dimen/dip_15"
                android:layout_marginLeft="@dimen/dip_20"
                android:layout_marginRight="@dimen/dip_5"
                android:layout_marginTop="@dimen/dip_15"
                android:background="@mipmap/ic_collect" />

            <TextView
                android:id="@+id/tv_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="@dimen/dip_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_product_filter_confirm"
            android:gravity="center"
            android:text="购买"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
</LinearLayout>